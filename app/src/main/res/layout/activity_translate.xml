<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="5dp"
                        app:elevation="4dp"
                        app:subtitleTextColor="@android:color/white"
                        app:titleTextColor="@android:color/white">
                        <FrameLayout android:gravity="center"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageButton
                                android:layout_gravity="end"
                                android:visibility="gone"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                style="@style/Widget.AppCompat.Button.Borderless"/>
                        </FrameLayout>
                    </androidx.appcompat.widget.Toolbar>
                    <TextView
                        android:textSize="@dimen/mainheading"
                        android:textColor="@color/main_blue"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Language Translator"
                        android:fontFamily="@font/english_font_semi_bold"
                        android:translationZ="5dp"/>
                </FrameLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="210dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:elevation="3dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="5dp">
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:background="@drawable/spinnercardbg" android:layout_width="match_parent" android:layout_height="match_parent">
                            <Spinner
                                android:id="@+id/spinner_language_from"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:dropDownVerticalOffset="45dp"
                                android:spinnerMode="dropdown"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <ImageView
                        android:id="@+id/image_swap"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/swap"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="210dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:elevation="3dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="5dp">
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:background="@drawable/spinnercardbg" android:layout_width="match_parent" android:layout_height="match_parent">
                            <Spinner
                                android:id="@+id/spinner_language_to"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:dropDownVerticalOffset="45dp"
                                android:spinnerMode="dropdown"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/textviewbg"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <com.autofit.et.lib.AutoFitEditText
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="start"
                        android:id="@+id/text_input"
                        android:background="@android:color/transparent"
                        android:scrollbars="vertical"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:inputType="none|text|textMultiLine|textNoSuggestions"
                        android:isScrollContainer="false"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:fontFamily="@font/english_font_semi_bold"/>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="end"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="5dp">
                        <ImageButton
                            android:id="@+id/speakInputBtn"
                            android:background="@drawable/circle_background" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/volume" android:elevation="3dp" style="@style/Widget.AppCompat.Button.Borderless"/>
                        <ImageButton
                            android:id="@+id/takepicBtn"
                            android:background="@drawable/circle_background" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginLeft="5dp" android:src="@drawable/camera" android:elevation="3dp" style="@style/Widget.AppCompat.Button.Borderless"/>
                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/picture"
                            android:visibility="gone"
                            android:layout_width="300dp"
                            android:layout_height="250dp"
                            android:src="@drawable/credit_card"/>
                        <ImageButton
                            android:id="@+id/mImageSpeak"
                            android:background="@drawable/circle_background" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginLeft="5dp" android:src="@drawable/mic" android:elevation="3dp" style="@style/Widget.AppCompat.Button.Borderless"/>
                        <ImageButton android:id="@+id/clearbtn"
                            android:background="@drawable/circle_red"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/close"
                            android:elevation="3dp"
                            style="@style/Widget.AppCompat.Button.Borderless"/>
                    </LinearLayout>
                </LinearLayout>
                <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginLeft="50dp" android:layout_marginTop="20dp" android:layout_marginRight="50dp" android:layout_marginBottom="8dp" android:elevation="5dp" app:cardCornerRadius="10dp">
                    <Button
                        android:textSize="@dimen/translate_text_size"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:id="@+id/button_translate"
                        android:background="@drawable/button_shape"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="@string/new_translate"
                        android:fontFamily="@font/english_font_semi_bold" style="@style/Widget.AppCompat.Button.Borderless"/>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/textviewbg"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="20dp">
                    <com.forhad.languagestranslator.Customization.AutoResizeTextView
                        android:textSize="18sp"
                        android:gravity="start"
                        android:id="@+id/text_translated"
                        android:background="@android:color/transparent"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/urdu_font"/>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="end"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="5dp">
                        <ImageButton
                            android:id="@+id/copyBtn"
                            android:background="@drawable/circle_background"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/copy"
                            android:elevation="3dp" style="@style/Widget.AppCompat.Button.Borderless"/>
                        <ImageButton android:id="@+id/sharebtn"
                            android:background="@drawable/circle_background"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/share"
                            android:elevation="3dp" style="@style/Widget.AppCompat.Button.Borderless"/>
                        <ImageButton android:id="@+id/speakTranslatedBtn"
                            android:background="@drawable/circle_background"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/volume"
                            android:elevation="3dp" style="@style/Widget.AppCompat.Button.Borderless"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:background="@drawable/banner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"/>

            </LinearLayout>
        </ScrollView>
        <com.google.android.material.navigation.NavigationView android:layout_gravity="start" android:id="@+id/navigation" android:layout_width="wrap_content" android:layout_height="match_parent" app:itemIconTint="#000000">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <include layout="@layout/nav_header"/>
                <LinearLayout android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <ListView android:id="@+id/optionsLV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:divider="@null"
                        android:dividerHeight="0dp"/>
                    <LinearLayout android:gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/cell"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">
                        <TextView android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/maincolor"
                            android:gravity="center_vertical"
                            android:id="@+id/setting"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:text="Floating Button"
                            android:drawableLeft="@drawable/ic_settings_black_24dp" android:drawablePadding="13dp" android:layout_weight="1"/>
                        <androidx.appcompat.widget.SwitchCompat
                            android:theme="@style/SCBSwitch"
                            android:id="@+id/floatSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.navigation.NavigationView>
    </androidx.drawerlayout.widget.DrawerLayout>
</LinearLayout>
